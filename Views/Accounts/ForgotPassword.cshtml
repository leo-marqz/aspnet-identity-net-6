
@using ASPNetIdentity.Models.Views;
@model ForgotPassword;

@{
    ViewData["Title"] = "Olvido su contraseña";
}


<section class="mt-2">
    <div class=" shadow-sm">
        <div class="">
            <h3 class="text-center fw-bold">Olvido su contraseña? </h3>
        </div>
        <div class="card-body">
            <form asp-controller="accounts" asp-action="forgotpassword" method="post" class="row">
                <div class="text-danger" role="alert" asp-validation-summary="ModelOnly"></div>
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="mb-4">
                        <p  class="alert alert-info" role="alert">Ingrese su correo electronico para enviar un email de recuperacion.</p>
                        <label asp-for="Email" class="form-label"></label>
                        <input type="text" asp-for="Email" class="form-control form-control-sm" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div> 
                    <button type="submit" class="btn btn-success d-inline-block w-25">Enviar Email</button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}